<?xml version="1.0" encoding="UTF-8"?>

<config>
    <modules>
        <KeithM_ProductLinks>
            <version>0.0.1</version>
        </KeithM_ProductLinks>
    </modules>
    <global>
        <blocks>
            <keithm_productlinks>
                <class>KeithM_ProductLinks_Block</class>
            </keithm_productlinks>
        </blocks>
        <helpers>
            <keithm_productlinks>
                <class>KeithM_ProductLinks_Helper</class>
            </keithm_productlinks>
        </helpers>
        <models>
            <keithm_productlinks>
                <class>KeithM_ProductLinks_Model</class>
            </keithm_productlinks>
            <catalog>
                <rewrite>
                    <product>KeithM_ProductLinks_Model_Catalog_Product</product>
                    <product_link>KeithM_ProductLinks_Model_Catalog_Product_Link</product_link>
                    <product_link_api>KeithM_ProductLinks_Model_Catalog_Product_Link_Api</product_link_api>
                    <product_link_api_v2>KeithM_ProductLinks_Model_Catalog_Product_Link_Api_V2</product_link_api_v2>
                </rewrite>
            </catalog>
        </models>
        <resources>
            <keithm_productlinks_setup>
                <setup>
                    <module>KeithM_ProductLinks</module>
                    <class>KeithM_ProductLinks_Model_Resource_Setup</class>
                </setup>
            </keithm_productlinks_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <keithm_productlinks before="Mage_Adminhtml">KeithM_ProductLinks_Adminhtml</keithm_productlinks>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <keithm_productlinks>
                    <file>keithm_productlinks.xml</file>
                </keithm_productlinks>
            </updates>
        </layout>
        <events>
            <catalog_product_prepare_save>
                <observers>
                    <keithm_productlinks_catalog_product_prepare_save>
                        <class>keithm_productlinks/observer</class>
                        <method>catalogProductPrepareSave</method>
                    </keithm_productlinks_catalog_product_prepare_save>
                </observers>
            </catalog_product_prepare_save>
            <catalog_model_product_duplicate>
                <observers>
                    <keithm_productlinks_catalog_product_prepare_save>
                        <class>keithm_productlinks/observer</class>
                        <method>catalogModelProductDuplicate</method>
                    </keithm_productlinks_catalog_product_prepare_save>
                </observers>
            </catalog_model_product_duplicate>
        </events>
    </adminhtml>
</config>